{
  "name": "@klepper/commons",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": "false",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "run-s lint:prettier",
    "lint:prettier": "prettier */**/*.{js,ts,tsx} --write",
    "pack": "npm pack",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch --notify"
  },
  "dependencies": {
    "@klepper/transport": "0.0.1",
    "tslint": "^6.1.3",
    "typescript": "^4.6.2"
  },
  "jest": {
    "verbose": false,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
